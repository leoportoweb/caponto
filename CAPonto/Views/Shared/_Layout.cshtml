                    <a class="dropdown-item" href="#">Another action</a>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </li>
            -->
        </ul>
        <form class="form-inline my-2 my-lg-0" style="background-color: transparent; color: white;">
            @Html.Raw(Context.Session.GetString("_MATRICULA")) -
            @Html.Raw(Context.Session.GetString("_NOME"))
        </form>
    </div>
</nav>
    
<!--partial name="_CookieConsentPartial" /-->

    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - CAPonto</p>
        </footer>
    </div>

