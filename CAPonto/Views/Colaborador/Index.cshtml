@model IEnumerable<CAPonto.Models.Colaborador>

@{
    ViewData["Title"] = "Collaborator";
}

<h2>Collaborators</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Matricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Administrador)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { matricula = item.Matricula }) |
                @Html.ActionLink("Details", "Details", new { matricula = item.Matricula }) |
                @Html.ActionLink("Delete", "Delete", new { matricula = item.Matricula })
            </td>
        </tr>
}
    </tbody>
</table>
